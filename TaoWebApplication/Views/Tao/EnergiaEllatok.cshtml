@using TaoWebApplication.Extensions
@using TaoWebApplication.Models
@model EnergiaEllatokModel

@{
    ViewBag.Title = "Adozott Eredmeny";
}

@using (Html.BeginForm("EnergiaEllatok", "Tao", FormMethod.Post))
{
    <div class="container-fluid">
        @for (int group = 1; group < 8; group++)
            {
            var firstrow = true;
            string font = "normal";
            <div class="row">
                <div class="col-md-8 DivStyle">
                    <table class="TaoDataTable table">
                        <thead>
                            <tr>
                                @if (1 == group)
                                {
                                    <th class="col-md-5">Megnevezés</th>
                                    <th class="col-md-2" style="text-align:center">Érték</th>
                                }
                            </tr>
                        </thead>

                        @for (int i = 0; i < Model.Fields.Count; i++)
                        {
                            if (Model.Fields[i].SectionGroup != group)
                            {
                                continue;
                            }
                            @Html.HiddenFor(m => Model.Fields[i].Id);

                            font = "normal";
                            if(firstrow)
                            {
                                font = "bold;";
                                firstrow = false;
                            }

                             var color = Model.Fields[i].Id == 1527 || Model.Fields[i].Id == 1528 ?  "Cyan" : "";
                            color = Model.Fields[i].Id == 1526 ?  "lawngreen" : color;
                            <tr style="font-weight:@font; background-color: @color">
                                <td>
                                    @Model.Fields[i].Title
                                </td>
                                <td>
                                    @Html.CreateActualControl((IFieldList)Model, i)
                                </td>
                            </tr>
                            }
                            </table>
                </div>
            </div>
            <br />
        }

        <div class="row">
            <div class="col-md-4 DivStyle" style="display:flex; justify-content: center;">
                <button type="submit" value="Previous" name="buttonAction" class="btn btn-default">Mentés és előző </button>
                <button type="submit" value="Save" name="buttonAction" class="btn btn-default" style="margin-left:10px;margin-right:10px;">Mentés</button>
                <button type="submit" value="Next" name="buttonAction" class="btn btn-default">Mentés és következő</button>
            </div>
        </div>
    </div>
}