@using TaoWebApplication.Extensions
@using TaoWebApplication.Models
@model EnergiaEllatokModel

@{
    ViewBag.Title = "Adozott Eredmeny";
}

@using (Html.BeginForm("EnergiaEllatok", "Tao", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12 DivStyle">
                        <table class="TaoDataTable table">
                            <thead>
                                <tr>
                                    <th class="col-md-5">Megnevezés</th>
                                    <th class="col-md-2" style="text-align:center">Érték</th>
                                </tr>
                            </thead>
                            @{
                                var firstrow = true;
                                string font = "normal";
                                for (int i = 0; i < Model.Fields.Count; i++)
                                {

                                    if (Model.Fields[i].SectionGroup != 1)
                                    {
                                        continue;
                                    }
                                    @Html.HiddenFor(m => Model.Fields[i].Id);

                                    font = "normal";
                                    if (firstrow)
                                    {
                                        font = "bold;";
                                        firstrow = false;
                                    }

                                    var color = Model.Fields[i].Id == 1527 || Model.Fields[i].Id == 1528 ? "Cyan" : "";
                                    color = Model.Fields[i].Id == 1526 ? "lawngreen" : color;
                                    <tr style="font-weight:@font; background-color: @color">
                                        <td>
                                            @Model.Fields[i].Title
                                        </td>
                                        <td>
                                            @Html.CreateActualControl((IFieldList)Model, i)
                                        </td>
                                    </tr>
                                }
                            }

                        </table>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 DivStyle">
                        <table class="TaoDataTable table">
                            <thead>
                                <tr></tr>
                            </thead>

                            @{
                                firstrow = true;
                                font = "normal";
                                for (int i = 0; i < Model.Fields.Count; i++)
                                {

                                    if (Model.Fields[i].SectionGroup != 2)
                                    {
                                        continue;
                                    }
                                    @Html.HiddenFor(m => Model.Fields[i].Id);

                                    font = "normal";
                                    if (firstrow)
                                    {
                                        font = "bold;";
                                        firstrow = false;
                                    }

                                    var color = Model.Fields[i].Id == 1527 || Model.Fields[i].Id == 1528 ? "Cyan" : "";
                                    color = Model.Fields[i].Id == 1526 ? "lawngreen" : color;
                                    <tr style="font-weight:@font; background-color: @color">
                                        <td>
                                            @Model.Fields[i].Title
                                        </td>
                                        <td>
                                            @Html.CreateActualControl((IFieldList)Model, i)
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
                <br />
                @for (int group = 4; group < 8; group++)
                {
                    firstrow = true;
                    font = "normal";
                    <div class="row">
                        <div class="col-md-12 DivStyle">
                            <table class="TaoDataTable table">
                                <thead>
                                    <tr>
                                        @if (1 == group)
                                        {
                                            <th class="col-md-5">Megnevezés</th>
                                            <th class="col-md-2" style="text-align:center">Érték</th>
                                        }
                                    </tr>
                                </thead>

                                @for (int i = 0; i < Model.Fields.Count; i++)
                                {
                                    if (Model.Fields[i].SectionGroup != group)
                                    {
                                        continue;
                                    }
                                    @Html.HiddenFor(m => Model.Fields[i].Id);

                                    font = "normal";
                                    if (firstrow)
                                    {
                                        font = "bold;";
                                        firstrow = false;
                                    }

                                    var color = Model.Fields[i].Id == 1527 || Model.Fields[i].Id == 1528 ? "Cyan" : "";
                                    color = Model.Fields[i].Id == 1526 ? "lawngreen" : color;
                                    <tr style="font-weight:@font; background-color: @color">
                                        <td>
                                            @Model.Fields[i].Title
                                        </td>
                                        <td>
                                            @Html.CreateActualControl((IFieldList)Model, i)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6 DivStyle">
                <table class="TaoDataTable table">
                    <thead>
                        <tr>
                            <th class="col-md-5">Megnevezés</th>
                            <th class="col-md-2" style="text-align:center">Érték</th>
                        </tr>
                    </thead>
                    @{
                        firstrow = true;
                        font = "normal";
                        for (int i = 0; i < Model.Fields.Count; i++)
                        {

                            if (Model.Fields[i].SectionGroup != 3)
                            {
                                continue;
                            }
                            @Html.HiddenFor(m => Model.Fields[i].Id);

                            font = "normal";
                            if (firstrow)
                            {
                                font = "bold;";
                                firstrow = false;
                            }

                            var color = Model.Fields[i].Id == 1527 || Model.Fields[i].Id == 1528 ? "Cyan" : "";
                            color = Model.Fields[i].Id == 1526 ? "lawngreen" : color;
                            <tr style="font-weight:@font; background-color: @color">
                                <td>
                                    @Model.Fields[i].Title
                                </td>
                                <td>
                                    @Html.CreateActualControl((IFieldList)Model, i)
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 DivStyle" style="display:flex; justify-content: center;">
                <button type="submit" value="Previous" name="buttonAction" class="btn btn-default">Mentés és előző </button>
                <button type="submit" value="Save" name="buttonAction" class="btn btn-default" style="margin-left:10px;margin-right:10px;">Mentés</button>
            </div>
        </div>
    </div>
}