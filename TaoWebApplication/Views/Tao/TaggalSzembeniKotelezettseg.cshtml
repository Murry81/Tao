@using TaoWebApplication.Extensions
@using TaoWebApplication.Models
@model TaggalSzembeniKotelezettsegModel

@{
    ViewBag.Title = "TaggalSzembeniKotelezettseg";
}

@using (Html.BeginForm("TaggalSzembeniKotelezettseg", "Tao", FormMethod.Post))
{
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6">
                @for (int i = 0; i < Model.Fields.Count; i++)
                {
                    <div class="row">
                        @Html.HiddenFor(m => Model.Fields[i].Id)
                        <div class="col-md-5">
                            @Model.Fields[i].Title
                        </div>
                        <div class="col-md-2">
                            @Html.CreateActualControl((IFieldList)Model, i)
                        </div>
                    </div>
                }
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                Hivatkozás: Tao tv. 6. § (9) c.)<br />
                Magánszemély taggal szemben fennálló kötelezettség napi átlagos állományának az adóévet megelőző adóév utolsó napján a magánszemély taggal szemben fennálló kötelezettségét meghaladó összegének az 50%-a. <br />
                Nem értjük kötelezettség alatt az áruszállításból és a szolgáltatásból származó kötelezettséget és a megállapított, de ki nem fizetett osztalékkötelezettséget.<br/>
            </div>
        </div>

        <div class="row">
            @for (int table = 0; table < 1; table++)
            {
                <div class="col-md-6 DivStyle">
                    <b>
                        Taggal szemben fennálló kötelezettségek állományváltozásai
                    </b>
                    <table class="TaoDataTable table" style="width:auto">
                        <thead>
                            <tr>
                                @{
                                    foreach (var i in Model.TableDescriptors[table].FieldDescriptorIds)
                                    {
                                        <th class="col-md-2" style="text-align:center;">
                                            @Html.Label(Model.TableDescriptors[table].Captions[i])
                                        </th>
                                    }
                                }
                            </tr>
                        </thead>
                        @{
                            for (int i = 0; i < Model.TableDescriptors[table].FieldValues.Count; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < Model.TableDescriptors[table].Captions.Count; j++)
                                    {
                                        <td>
                                            @Html.HiddenFor(m => Model.TableDescriptors[table].FieldValues[i][j].FieldValueId)
                                            @Html.HiddenFor(m => Model.TableDescriptors[table].FieldValues[i][j].Id)
                                            @Html.HiddenFor(m => Model.TableDescriptors[table].FieldValues[i][j].RowIndex, new { Value = i })

                                            @Html.CreateActualControlForTable(Model, i, j, table)
                                        </td>
                                    }
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-md-6 DivStyle" style="display:flex; justify-content: center;">
                <button type="submit" value="Previous" name="buttonAction" class="btn btn-default">Mentés és előző </button>
                <button type="submit" value="Save" name="buttonAction" class="btn btn-default" style="margin-left:10px;margin-right:10px;">Mentés</button>
                <button type="submit" value="Next" name="buttonAction" class="btn btn-default">Mentés és következő</button>
            </div>
        </div>
    </div>
}
