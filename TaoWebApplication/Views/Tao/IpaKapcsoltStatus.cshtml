@using TaoWebApplication.Extensions
@using TaoWebApplication.Models
@using TaoContracts.Contracts
@model IpaKapcsoltStatusModel

@{
    ViewBag.Title = "Ipa kapcsolt status";
}

@using (Html.BeginForm("IpaKapcsoltStatus", "Tao", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 DivStyle">
                <table class="TaoDataTable table">
                    <thead>
                        <tr>
                            @foreach (var v in Model.TableDescriptor.FieldDescriptorIds)
                            {
                             <th style="width:7%; border:double;">@Model.TableDescriptor.Captions[v]</th>
                            }
                        </tr>
                    </thead>

                    @for (int i = 0; i < Model.TableDescriptor.FieldValues.Count; i++)
                    {
                <tr>
                    @for (int j = 0; j < Model.TableDescriptor.FieldValues[i].Count; j++)
                    {
                        @Html.HiddenFor(m => Model.TableDescriptor.FieldValues[i][j].Id);
                        @Html.HiddenFor(m => Model.TableDescriptor.FieldValues[i][j].RowIndex, new { Value = i} );
                        <td style="width:7%; border:double; ">
                            @Html.CreateActualControlForTable(Model, i, j)
                        </td>
                    }
                </tr>
                    }                   
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 DivStyle" style="display:flex; justify-content: center;">
                <button type="submit" value="Previous" name="buttonAction" class="btn btn-default">Mentés és előző </button>
                <button type="submit" value="Save" name="buttonAction" class="btn btn-default" style="margin-left:10px;margin-right:10px;">Mentés</button>
                <button type="submit" value="Next" name="buttonAction" class="btn btn-default">Mentés és következő</button>
            </div>
        </div>
    </div>
}